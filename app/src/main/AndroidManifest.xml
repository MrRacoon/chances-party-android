<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chancesnow.party">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PartyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_poppers"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/PartyTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlaylistsActivity"
            android:label="@string/select_playlist"
            android:launchMode="singleTask"
            android:alwaysRetainTaskState="true" />
        <activity
            android:name=".QueueActivity"
            android:label="@string/queue"
            android:parentActivityName=".PlaylistsActivity"
            android:launchMode="singleTask"
            android:alwaysRetainTaskState="true" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.chancesnow.party.PlaylistsActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

</manifest>