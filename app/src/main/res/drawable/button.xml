<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <stroke android:width="2dip" android:color="@android:color/white" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <stroke android:width="2dip" android:color="@color/colorAccentLightControlHighlight" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <stroke android:width="2dip" android:color="@color/colorAccentLightControl" />
        </shape>
    </item>
</selector>